		// else if (args[2].equals("Pattern.DOTALL"))
		// flag = Pattern.DOTALL;
		// else if (args[2].equals("Pattern.LITERAL"))
		// flag = Pattern.LITERAL;
		// else if (args[2].equals("Pattern.MULTILINE"))
		// flag = Pattern.MULTILINE;
